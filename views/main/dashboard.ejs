<section class="text-gray-600 body-font">
  <div class="px-4 py-16 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8 lg:py-20">
    <div class="container mx-auto">
      <div class="lg:w-2/3 flex flex-col sm:flex-row sm:items-center items-start mx-auto">
        <h1 class="flex-grow sm:pr-16 text-2xl font-medium title-font text-gray-900 dark:text-white">Slow-carb next level shoindxgoitch ethical authentic, scenester sriracha forage.</h1>
        <a href="#" class="flex-shrink-0 text-white bg-indigo-500 border-0 py-2 px-8 focus:outline-none hover:bg-indigo-600 rounded text-lg mt-10 sm:mt-0">Buat Article</a>
      </div>
    </div>
    <div class="flex flex-wrap -mx-4 -my-8">
      <!-- foreach -->
      <% data.forEach(e => { %>
        <div class="py-8 px-4 lg:w-1/3">
          <div class="h-full flex items-start">
            <div class="w-12 flex-shrink-0 flex flex-col text-center leading-none">
              <span class="text-gray-500 pb-2 mb-2 border-b-2 border-gray-200 dark:text-gray-400">Jul</span>
              <span class="font-medium text-lg text-gray-800 title-font leading-none dark:text-gray-400">18</span>
            </div>
            <div class="flex-grow pl-6">
              <h2 class="tracking-widest text-xs title-font font-medium text-indigo-500 mb-1">CATEGORY</h2>
              <h1 class="title-font text-xl font-medium text-gray-900 dark:text-white mb-3"><%= e.judul %></h1>
              <p class="leading-relaxed mb-5 text-gray-900 dark:text-gray-400"><%= e.prev_text %></p>
              <a class="inline-flex items-center">
                <img alt="blog" src="https://dummyimage.com/103x103" class="w-8 h-8 rounded-full flex-shrink-0 object-cover object-center">
                <span class="flex-grow flex flex-col pl-3">
                  <span class="title-font font-medium text-gray-900 dark:text-gray-400"><%= e.author %></span>
                </span>
              </a>
            </div>
          </div>
        </div>
      <% }) %>
      <!-- end -->
    </div>
  </div>
</section>